{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NEXT_PUBLIC_ENVIRONMENT", "NODE_ENV"],
  "globalDotEnv": [".env"],
  "globalDependencies": ["tsconfig.json"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "dotEnv": [
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dotEnv": [
        ".env.development.local",
        ".env.local",
        ".env.development",
        ".env"
      ]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build"],
      "dotEnv": [".env.test.local", ".env.local", ".env.test", ".env"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "test/**/*.ts",
        "test/**/*.tsx"
      ],
      "dotEnv": [".env.test.local", ".env.local", ".env.test", ".env"]
    },
    "lint": {},
    "clean": {
      "cache": false
    }
  }
}
