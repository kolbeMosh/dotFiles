{
  "name": "ignatius-book-club-root",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "./scripts/build.sh",
    "build:no-cache": "npx turbo run build --force",
    "dev": "./scripts/dev.sh",
    "start": "./scripts/start.sh",
    "lint": "npx turbo run lint",
    "clean": "npx turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@ibc/eslint-config": "workspace:*",
    "@ibc/typescript-config": "workspace:*",
    "@types/node": "^20.11.4",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "^1.11.3"
  },
  "packageManager": "pnpm@8.2.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=7"
  }
}
